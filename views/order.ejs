                function rAddrinfo() {
                    // console.log( homeAdd.value )
                    // console.log(  myzip , homeAdd.value )
                    rAddr.value = `${myzip}${homeAdd.value}`
                }

                // 設定使用者
                var userData = localStorage.getItem('token');
                var userToken = userData ? JSON.parse(userData) : false;
                // 設定目前使用者id
                var uid = userToken.id;

                // 連結訂單資料表 vgorder
                $.get(`/order/items/${uid}`, function (e) {
                    // console.log(e)
                    if (typeof (e) == 'string') {
                        items = JSON.parse(e);
                    } else {
                        items = e;
                    }
                    // 訂單內容
                    // console.log(items)

                    // 若從資訊確認頁面返回修改，帶入已存在資料庫的資料 (付款方式需重新輸入)
