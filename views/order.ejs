                    items[0].oTel != '' || null ? userTel.value = items[0].oTel : userTel.value = '';
                    items[0].oMail != '' || null ? userMail.value = items[0].oMail : userMail.value = '';
                    items[0].rName != '' || null ? homeName.value = items[0].rName : homeName.value = '';
                    items[0].rTel != '' || null ? homeTel.value = items[0].rTel : homeTel.value = '';
                    items[0].rAddr != '' || null ? homeAdd.value = items[0].rAddr : homeAdd.value = '';
                    items[0].billCompName != '' || null ? companyName.value = items[0].billCompName : companyName.value = '';
                    items[0].billCompNum != '' || null ? companyNum.value = items[0].billCompNum : companyNum.value = '';
                    items[0].billCompAddr != '' || null ? companyAdd.value = items[0].billCompAddr : companyAdd.value = '';
                    items[0].o_note != '' || null ? o_note.value = items[0].o_note : o_note.value = '';

                    var total = 0;
                    var bonus = 0;
                    var coupon = 0;
                    var shippingfee = 0;
                    $("#summary_items").empty();
                    $.each(items, function (index, item) {
                        item.size == 's' ? fee = 160 : fee = 290; // 運費 (S-160 L-290)
                        item.size == 's' ? item.size = '1~2人' : item.size = '3~4人';
                        item.useCoupon == null ? '0' : item.useCoupon;
                        item.c_note == null ? item.c_note = '無備註' : item.c_note;
                        var trHtml = `
                                <tr>
                                <td>
                                    <p class="m-0">${item.pname}</p>
                                    <p class="vg-ps">${item.size} ${item.freq} ${item.c_note} </p>
                                </td>
                                <td>${item.price}</td>
                            </tr>
                            `;
                        $("#summary_items").append(trHtml);
                        $('#coupondiscount').text(item.useCoupon);
                        $('#bonusdiscount').text(-item.useBonus);
                        bonus = parseInt(item.useBonus);
                        coupon = parseInt(item.useCoupon);
                        shippingfee += fee;
                        total += item.price;
                    })
                    // 運費計算
                    var tdHtml = `    
                        <td>${shippingfee}</td>
                        `;
                    $('#shippingfee').after(tdHtml)

                    // 總金額計算
                    $('#total').text(shippingfee + total - bonus + coupon)
                }).then(function (res) {
                    // 顯示訂單編號
                    orderid.innerText = res[0].oid;

                    // 點選 同會員資料 的功能
                    $('#memberdata').on('click', () => {
                        $.get(`/getuserinfo/${uid}`, function (res) {
                            myusername.value = res[0].Name
                            userTel.value = res[0].Phone
                            userMail.value = res[0].Email
                        })
                    })

                    // 點選 更新訂購資訊姓名及手機到會員資料 的功能
                    $('#updateMember').on('click', () => {
                        Swal.fire({
                            title: '確定要更新到會員資料?',
                            text: '本動作無法復原',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: '確定',
                            cancelButtonText: '取消'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch('/updateuserinfo/', {
                                    method: 'PATCH',
                                    headers: {
                                        "Content-Type": "application/json ; charset=UTF-8"
                                    },
                                    body: JSON.stringify({
                                        Name: myusername.value,
                                        Phone: userTel.value,
                                        uId: uid
                                    })
                                })
                            } else {
                                updateMember.checked = false
                            }
                        })
                    })

                    // 點選 同訂購資訊 的功能
                    $('#basicdata').on('click', function () {
                        homeName.value = myusername.value
                        homeTel.value = userTel.value
                    })
                    // 點選 信用卡頁籤 自動帶入信用卡號
                    $('#nav-card-tab').on('click', () => {
                        $.get(`/getuserinfo/payment/${uid}`, (res) => {
                            res.length ? (cardNum.value = res[0].card) : (cardNum.value = "")
                        })
                    })

                    // 點選 存入個人載具 自動帶入會員載具
                    $('#personalDrive').on('click', () => {
                        $.get(`/getuserinfo/${uid}`, (res) => {
                            res.length ? (carrierNum.value = res[0].carrier) : (carrierNum.value = "");
                            personalDrive.value = carrierNum.value
                        })
                    })

                    // 點選 從常用地址帶入(收件資料) 的功能(多個資料)
                    $('#frommember').on('click', () => {
                        // 取得資料 => 打開modal => 選取要使用的資料
                        $.get(`/getuserinfo/addr/${uid}`, (res) => {
                            if (res.length > 0) {
                                $('#memberModal').modal('show')
                                var trHtml;
                                res.map((item) => {
                                    $(`#${item.uId}`).remove()
                                    trHtml += `<tr id=${item.uId}>
                            <td class="pt-3"><input type="radio" name="myAddr" id=${item.Name}></td>
                            <td class="pt-3"><label for=${item.Name}>${item.Name}</label></td>
                            <td class="pt-3"><label for=${item.Name}>${item.Phone}</label></td>
                            <td class="pt-3"><label for=${item.Name}>${item.address}</label></td>
                            </tr>`
                                })
                                $('#myAddrrows').append(trHtml);
                                // 確認 => 帶入資料
                                $('#membermodalok').on('click', () => {
                                    $('#memberModal').modal('hide')
                                    var parentTr = $('input:radio:checked[name="myAddr"]').closest('tr')
                                    homeName.value = parentTr.find('td')[1].innerText
                                    homeTel.value = parentTr.find('td')[2].innerText
                                    homeAdd.value = parentTr.find('td')[3].innerText
                                })
                                // 取消 => 關閉modal
                                $('#membermodalcancel').on('click', () => { $('#memberModal').modal('hide') })
                            } else {
                                Swal.fire({
                                    title: '您沒有常用地址資料',
                                    icon: 'warning',
                                    showConfirmButton: false,
                                    timer: 1500
                                })
                            }
                        })
                    })

                    // 點選 更新到常用地址(收件資料) 的功能(insert)
                    $('#updatemyaddress').on('click', () => {
                        Swal.fire({
                            title: '確定要更新到常用地址?',
                            text: '本動作無法復原',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: '確定',
                            cancelButtonText: '取消'
                        }).then((result) => {
                            if (result.isConfirmed) {
                                fetch('/updateuserinfo/addr/', {
                                    method: 'POST',
                                    headers: {
                                        "Content-Type": "application/json ; charset=UTF-8"
                                    },
                                    body: JSON.stringify({
                                        uid: uid,
                                        name: homeName.value,
                                        phone: homeTel.value,
                                        address: rAddr.value
                                    })
                                })
                            } else {
                                updateMember.checked = false
                            }
                        })
                    })
                }).then(() => {

                    // $.get('/cvs_callback', (res) => {
                    //     console.log('cvs', res)
                    //     console.log('aaa')
                    // })
                }
                )

                // 從order 返回 cart 的動作
                function backtocart() {
                    var oid = orderid.innerText
                    // 更新 本筆訂單 對應的 cart status => active
                    fetch('/editcart/statusactive/', {
                        method: 'PATCH',
                        headers: {
                            "Content-Type": "application/json ; charset=UTF-8"
                        },
                        body: JSON.stringify({
                            oid: oid,
                        })
                    }).then(
                        // 刪除本筆訂單
                        fetch(`/order/delete/${oid}`, {
                            method: 'DELETE',
                            headers: {
                                "Content-Type": "application/json ; charset=UTF-8"
                            },
                            body: JSON.stringify({
                                oid: oid,
                            })
                        })
                    ).then(
                        // 轉址
                        document.location.href = "/cart/"
                    )
                }



                // 從order 前往 確認訂單 的動作
                function getdetails() {
                    if ($('.invalid').length != 0) {
                        Swal.fire({
                            title: '您輸入的資訊有誤，請再次確認',
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        return
                    }

                    // 確認是否已填妥資料
                    if (!myusername.value || !userTel.value || !userMail.value) {
                        Swal.fire({
                            title: '您的基本資訊尚未填妥',
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        return
                    }
                    if (!homeName.value && !sevenName.value) {
                        Swal.fire({
                            title: '您的收件資訊尚未填妥',
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        return
                    }

                    if (!transferName.value && !cardName.value && !linepay.checked) {
                        Swal.fire({
                            title: '您的付款方式尚未填妥',
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        return
                    }

                    var oid = orderid.innerText;
                    var formdata = $('#orderdetails').serializeArray();
                    // 增加表格以外的資料
                    var alldata = [...formdata, { name: 'oid', value: oid }]
                    var JSONData = serializeToJSON(alldata);
                    console.log(JSONData);

                    if (contract.checked && reminder.checked) {
                        fetch(`/editorder/details/${oid}`, {
                            method: 'PATCH',
                            headers: {
                                "Content-Type": "application/json ; charset=UTF-8"
                            },
                            body: JSONData
                        }).then(
                            // 完成表格填寫，跳轉至下一頁面
                            document.location.href = "/orderconfirm/"
                        )
                    } else {
                        Swal.fire({
                            title: '請閱讀服務協議與購物提醒！',
                            icon: 'warning',
                            showConfirmButton: false,
                            timer: 1500
                        })
                    }
                }

                function serializeToJSON(data) {
                    var values = {};
                    for (index in data) {
                        values[data[index].name] = data[index].value;
                    }
                    return JSON.stringify(values)
                }

                // 資料驗證
                var inputs = document.querySelectorAll('input')
                inputs.forEach(input => {
                    input.addEventListener('input', function () {
                        if (input.checkValidity()) {
                            input.classList.add('valid');
                            input.classList.remove('invalid');
                        } else {
                            input.classList.add('invalid');
                            input.classList.remove('valid');

                        }
                    })
                })

                // 信用卡驗證
                function formatCreditCard() {
                    const input = document.getElementById("cardNum");
                    // 去掉非數字的字元
                    let value = input.value.replace(/\D/g, '');
                    if (value.length > 16) {
                        value = value.substring(0, 16);
                    }
                    // 每四碼自動跳出橫槓
                    value = value.replace(/(\d{4})(?=\d)/g, '$1-');
                    input.value = value;
                }

            </script>

