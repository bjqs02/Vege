<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>會員中心</title>
    <link rel="icon" href="/img/fruitbox_s.png">

    <%- include('share/head_link.ejs') %>
    
    <!-- member的 CSS、JS 引用 -->
    <%- include('share/memb_link.ejs') %>
</head>

<body>
<%- include('share/m_green_header.ejs') %>

<%- include('share/m_HSidebar.ejs') %>
    
    <!-- contents -->
    <div class="flex-grow-1">
        <%- include('share/m_notify.ejs') %>

        <!-- content -->
        <div class="memb-content">
          <h4>訂單總覽</h4>
          
        <% for( var i = 0; i < dataosum.length; i++ ) { %>
          <div class="memb-order row">
            <ul class="list-group">
              <li class="list-group-item col-12 row">
                <div class="col-12 d-flex justify-content-between">
                  <span>✤ 編號: <%= dataosum[i].oid %></span>
                  <span><%= dataot[i] %></span>
                </div>
                <div class="col-3 pimg">
                  <img src="<%= dataorder[i].image %>" alt="">
                </div>
                <div class="col-4">
                  <p>品項: <%= dataorder[i].product %></p>
                <% if( dataorder[i].size == 's' ) { %>
                  <p>份量: 雙人箱(1-2) </p>
                <% }else {%>
                  <p>份量: 家庭箱(3-4)</p>
                <% }%>
                
                  <p>數量: <%= dataorder[i].quantity %></p>
                </div>
                <div class="col-2">
                <% if( dataorder[i].freq == 'once' ) { %>
                  <p>單次配送</p>
                <% }else if( dataorder[i].freq == '30d' ) { %>
                  <p>每周配送 (30天)</p>
                <% }else { %>
                  <p>雙周配送 (60天)</p>
                <% } %>
                </div>
                <% if( dataorder[i].freq == 'once' ) { %>
                <div class="col-3 order-button1">
                  <button class="btn">追蹤狀態</button>
                  <button class="btn">聯絡客服</button>

                <% }else { %>
                <div class="col-3 order-button2">
                  <button class="btn">追蹤狀態</button>
                  <button class="btn">聯絡客服</button>
                  <button class="btn btn-vg-redborder">延後配送</button>
                <% } %>

                  <!-- <button class="btn">查看詳情</button> -->
                </div>

              <% if( dataosum[i].sumitem > 1 ) { %>
                <a href="#">
                  <div class="viewMoreP col-12 text-center">
                    共 <%= dataosum[i].sumitem %> 樣商品，檢視更多商品
                  </div>
                </a>
              <% }else { %>

              <% } %>
  
                <div class="col-10">
                  <span>訂單狀態: 配送中</span>
                </div>
                <div class="col-2 total">
                  <span>$<%= dataosum[i].sumMoney %></span>
                </div>
              </li>
            </ul>
          </div>
        <% } %>
          
          <br><br><br><br><br><br><br><br>
          <br><br><br><br><br><br><br><br>
          <br><br><br><br><br><br><br><br>
        </div>
    </div>

    <%- include('share/m_multF.ejs') %>

<%- include('share/footer.ejs') %>

</body>

</html>